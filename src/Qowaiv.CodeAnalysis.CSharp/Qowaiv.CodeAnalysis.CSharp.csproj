<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\props\package.props" />
  
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>Qowaiv.Analyzers.CSharp</PackageId>
    <PackageTargetFallback>portable-net45+win8+wp8+wpa81</PackageTargetFallback>
    <IncludeBuildOutput>false</IncludeBuildOutput>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\shared\Guard.cs" Link="Guard.cs" />
  </ItemGroup>

  <ItemGroup>
    <None
      Include="$(OutputPath)\Qowaiv.CodeAnalysis.dll" 
      Link="Package\analzyzers\Qowaiv.CodeAnalysis.dll"
      Pack="true"
      PackagePath="analyzers"
      Visible="false"/>
    <None
      Include="$(OutputPath)\$(AssemblyName).dll"
      Link="Package\analzyzers\$(AssemblyName).dll"
      Pack="true"
      PackagePath="analyzers" 
      Visible="false"/>
    <None Update="tools\*.ps1" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Qowaiv.CodeAnalysis\Qowaiv.CodeAnalysis.csproj" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.11.0" />
  </ItemGroup>

</Project>
